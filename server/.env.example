# =============================================================================
# Roblox Multi-Game-Management-System - Environment Configuration
# Copy this file to .env and update the values for your environment
# =============================================================================

# Application Environment
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration (REQUIRED in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_ISSUER=roblox-game-system

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this
SESSION_MAX_AGE=86400000

# Password Hashing
BCRYPT_ROUNDS=12

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database (REQUIRED in production)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=roblox_game
DB_USER=roblox_user
DB_PASSWORD=your-secure-database-password-change-this
DB_SSL=false

# Database Connection Pooling
DB_POOL_MIN=5
DB_POOL_MAX=20
DB_POOL_IDLE=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Cache (REQUIRED in production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password-change-this
REDIS_DB=0
REDIS_PREFIX=roblox:

# =============================================================================
# GAME MANAGER CONFIGURATION
# =============================================================================

GAME_MANAGER_PORT=3000
GAMES_DIRECTORY=./games
PLUGINS_DIRECTORY=./plugins
ASSETS_DIRECTORY=./assets
UPLOADS_DIRECTORY=./uploads

# Game Limits
MAX_CONCURRENT_GAMES=10
MAX_PLAYERS_PER_GAME=50
SESSION_TIMEOUT=3600000
HEALTH_CHECK_INTERVAL=30000

# Auto Restart (for production)
AUTO_RESTART=false
RESTART_DELAY=5000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=10485760

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

LOG_LEVEL=info
LOG_DIRECTORY=./logs
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m
LOG_DATE_PATTERN=YYYY-MM-DD

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

CACHE_DEFAULT_TTL=300
CACHE_CHECK_PERIOD=600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
PROMETHEUS_PATH=/metrics
HEALTH_CHECK_ENABLED=true
DETAILED_HEALTH_CHECK=false

# =============================================================================
# ROBLOX SERVER CONFIGURATION
# =============================================================================

ROBLOX_SERVER_PORT=27015
ROBLOX_SERVER_HTTP_PORT=8080
MAX_PLAYERS=50
SERVER_NAME=Local Roblox Server

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================

HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# ADDITIONAL SERVICES
# =============================================================================

# PostgreSQL
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379

# Monitoring
MONITORING_PORT=9090
LOGGING_PORT=3100

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'production' for production deployments
NODE_ENV=development

# Enable detailed logging in development
LOG_LEVEL=debug

# Disable rate limiting in development
RATE_LIMIT_MAX=1000

# =============================================================================
# SECURITY NOTES
# =============================================================================
#
# ⚠️  SECURITY WARNING: This file contains template values!
#
# For production deployment:
# 1. Change ALL password values to secure passwords
# 2. Generate strong JWT secrets
# 3. Enable SSL/TLS (set DB_SSL=true)
# 4. Configure proper CORS origins
# 5. Set NODE_ENV=production
# 6. Use environment-specific configuration
#
# Recommended password generation:
# openssl rand -base64 32
#
# Example secure values:
# JWT_SECRET=$(openssl rand -base64 32)
# DB_PASSWORD=$(openssl rand -base64 32)
# REDIS_PASSWORD=$(openssl rand -base64 32)
# =============================================================================